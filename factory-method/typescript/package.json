{
  "name": "factorymethod",
  "version": "1.0.0",
  "description": "Typescript example of Factory Method design pattern",
  "main": "src/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "build": "mkdirp dist && webpack",
    "copy:static": "copyup src/**/*.html src/**/*.css dist",
    "copy": "npm run copy:static",
    "serve": "http-server dist",
    "prestart": "npm run clean && npm run build & npm run copy",
    "start": "opener http://localhost:8080 & npm run serve"
  },
  "repository": {
    "type": "git",
