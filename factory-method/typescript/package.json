  "devDependencies": {
    "copyfiles": "^1.2.0",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "opener": "^1.4.3",
    "rimraf": "^2.6.1",
    "ts-loader": "^2.0.1",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1"
  }
}
